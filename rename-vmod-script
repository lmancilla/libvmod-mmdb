#!/bin/bash
#
# Script to rename libvmod-mmdb into libvmod-foo.
# (where "foo" is your new vmod name, of course.)
#
# Leaves the changes uncommitted in the working tree, so you get to fix any
# unintended changes.
#
# Author: Lasse Karstensen <lkarsten@varnish-software.com>, September 2014.
#
set -o errexit

NAME=$1
if [ -z "$NAME" ]; then
	echo "Usage: $0 <new-vmod-name-without-libvmod-prefix>"
	echo "Rename libvmod-mmdb source tree."
	echo
	exit -1
fi

if ! git diff-index --quiet HEAD --; then
	echo "ERROR: Need a clean working tree. Run \"git stash\" first."
	exit -2
fi

git mv src/vmod_mmdb.c src/vmod_${NAME}.c
git mv src/vmod_mmdb.vcc src/vmod_${NAME}.vcc
git mv vmod-mmdb.spec vmod-${NAME}.spec

git grep -z -l mmdb | xargs -0 sed -i -s -e "s/mmdb/${NAME}/g"

git rm rename-vmod-script

echo "All done."
echo -e "For your cut&paste needs:\n  git commit -a -m \"Automatic rename of libvmod-mmdb to libvmod-${NAME}.\""


